<%= stylesheet_link_tag "designs/sign_in.css" %>
<div class="box">
  <h2>ログイン</h2>
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <ul>
          <li><%= f.text_field :login, autofocus: true, placeholder: "ID or Email" %></li>
          <li><%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></li>
        </ul>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field remember-me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ユーザーを記憶する" %>
        </div>
      <% end -%>

      <div class="field">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
    <p class="new-user">新規ユーザー登録は<%= link_to "こちら", :controller => "registrations", :action => "new" %></p>
  </div><!-- .box-inner -->
</div><!-- .box -->
<%= render "users/shared/links" %>
<%= image_tag("main.svg", :class => "img-main", :alt => "") %>
